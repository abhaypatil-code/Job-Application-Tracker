{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "lib": [
            "ES2020"
        ],
        "outDir": "./dist-electron",
        "rootDir": ".",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "declaration": false,
        "declarationMap": false,
        "sourceMap": true,
        "moduleResolution": "node"
    },
    "include": [
        "electron/**/*.ts",
        "shared/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "dist-electron"
    ],
    "tsc-alias": {
        "resolveFullPaths": true,
        "verbose": false
    }
}