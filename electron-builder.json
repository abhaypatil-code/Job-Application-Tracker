{
    "appId": "com.jobsuite.app",
    "productName": "JobSuite",
    "directories": {
        "output": "release"
    },
    "files": [
        "dist/**/*",
        "dist-electron/**/*",
        "electron/database/schema.sql"
    ],
    "extraResources": [
        {
            "from": "electron/database/schema.sql",
            "to": "database/schema.sql"
        }
    ],
    "win": {
        "target": [
            "nsis",
            "portable"
        ],
        "icon": "public/app-icon.png"
    },
    "mac": {
        "target": [
            "dmg",
            "zip"
        ],
        "icon": "public/app-icon.png"
    },
    "linux": {
        "target": [
            "AppImage",
            "deb"
        ],
        "icon": "public/vite.svg"
    },
    "nsis": {
        "oneClick": false,
        "allowToChangeInstallationDirectory": true,
        "installerIcon": "public/vite.svg",
        "uninstallerIcon": "public/vite.svg"
    }
}